{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components": ["components"],
      "@/components/*": ["components/*"],
      "@/sections": ["sections"],
      "@/sections/*": ["sections/*"],
      "@/constants": ["constants"],
      "@/utils": ["utils"],
      "@/utils/*": ["utils/*"],
      "@/api": ["pages/api"],
      "@/api/*": ["pages/api/*"],
      "@/hooks": ["hooks"],
      "@/hooks/*": ["hooks/*"],
      "@/types": ["types"],
      "@/types/*": ["types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
